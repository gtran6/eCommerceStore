<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerceStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/green_neon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ECommerceStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ECommerceStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Theme.ECommerceStore.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="ToggleButtonTheme">
        <item name="layout_flexGrow">1</item>
        <item name="toggle_selectedBackgroundColor">@color/black</item>
        <item name="toggle_backgroundColor">@color/white</item>
        <item name="toggle_iconColor">#B3B3C3</item>
        <item name="toggle_iconPadding">28dp</item>
        <item name="toggle_btnCornerRadius">8dp</item>
        <item name="android:gravity">center</item>
        <item name="toggle_textSize">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Small" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/green_neon</item>
    </style>

</resources>